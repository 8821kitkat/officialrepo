<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.schismwizard" name="[COLOR orange]SchisM TV[/COLOR] [COLOR wizard] Wizard[/COLOR]" version="1.0.0" provider-name="SchisM">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">[COLOR lime]SchisM TV[/COLOR] Wizard</summary>
    <description lang="en">Install SchisM Official Builds</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.totaltv"
	name=" [COLOR yellow]Total[/COLOR] TV"
	version="1.1.0"
	provider-name="SchisM">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.urlresolver" version="2.10.12" />
    <import addon="script.module.metahandler" />
    <import addon="script.module.axel.downloader" version="0.2.0" optional="true"/>
	<import addon="script.module.t0mm0.common" version="2.0.0"/>
    <import addon="script.module.pyxbmct" version="1.1.4" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Watch your favourite TV Shows!</summary>
        <description>Watch your favourites TV Shows! Credits goes to natko</description>

    <platform>all</platform>
    <forum></forum>

  </extension>
</addon>

<addon id="repository.schismtv.official" name="[COLOR orange][B]SchisM TV[/B][/COLOR] Builds Repository" version="1.0" provider-name="SchisM">
    <extension point="xbmc.addon.repository" name="schism tv repository">
        <info compressed="false">http://github.com/schismtv/officialrepo/raw/master/addons.xml</info>
        <checksum>http://github.com/schismtv/officialrepo/raw/master/addons.xml.md5</checksum>
        <datadir zip="true">http://github.com/schismtv/officialrepo/raw/master/zips/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>This is used FOR BUILDS ONLY</summary>
        <description>BUILDS ONLY FROM SCHISM TV - THIS REPO CONTAINS UPDATES FOR THE SCHISM TV BUILDS
        </description>
        <platform>all</platform>
    </extension>
</addon>

